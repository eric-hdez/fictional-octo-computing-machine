{
  "compilerOptions": {
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "jsx": "react",
    "allowJs": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/types/declaration.d.ts"]
}
